@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<br>
<br>
@* nav-scrollable table *@
@* <div class="table-responsive" style="max-height: 300px; overflow-y: auto;"> *@
<div class="table-scrollable">
    <table class="table table-bordered table-striped table-fixed"> @* custom class: table-fixed *@
        <thead>
            <tr>
                <th>Header 1</th>
                <th>Header 2</th>
                <th>Header 3</th>
                <th>Header 4</th>
                <th>Header 5</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < 100; i++)
            {
                <tr>
                    <td>Row @i 00</td>
                    <td>Row @i where is width from</td>
                    <td>Row @i</td>
                    <td>Row @i</td>
                    <td>Row @i</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@code {
    private int currentCount = 0;
    private void IncrementCount()
    {
        currentCount++;
    }
}
